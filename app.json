{
  "expo": {
    "name": "BetRight",
    "slug": "betright",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/betright-logo.png",
    "scheme": "betright",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.betright.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1A237E",
        "foregroundImage": "./assets/images/betright-logo.png"
      },
      "package": "com.betright.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/betright-logo.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/betright-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#111827"
          }
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
